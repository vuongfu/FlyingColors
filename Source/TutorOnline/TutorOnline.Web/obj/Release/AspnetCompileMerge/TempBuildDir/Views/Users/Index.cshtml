@model PagedList.IPagedList<TutorOnline.Web.Models.IndexUserViewModel>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_BackendUser.cshtml";
    
}


<h2>Quản lý người dùng</h2>
<div>
    
    @Html.ActionLink("Tạo mới", "Create",null, htmlAttributes: new { @class = "btn btn-success" })
    @using (Html.BeginForm("Index", "Users", FormMethod.Get))
    {
    <p>
        <table cellspacing="0">
            <tr>
                <th class="col-lg-4">Tim kiếm</th>
                <th></th>
                <th class="col-lg-3">Chức vụ</th>
                <th></th>
                <th class="col-lg-2">Giới tính</th>
                <th></th>
                <th class="col-lg-1"></th>
            </tr>
            <tr>
                <td>@Html.TextBox("SearchString", null, htmlAttributes: new { @class = "form-control", style = "width:300px;" }) </td>
                <th></th>
                <td>@Html.DropDownList("roleString", null,"All", htmlAttributes: new { @class = "form-control" })</td>
                <td></td>
                <td>@Html.DropDownList("genderString", null, "All", htmlAttributes: new { @class = "form-control" })</td>        
                <td></td>
                <td><input type="submit" value="Tìm kiếm" class="btn btn-success" /></td>      
            </tr>
        </table>
              
       
    </p>
    }
    
</div>
@if (ViewBag.searchClick == true)
{
    <p>Số kết quả tìm được: @ViewBag.totalRecord</p>
}

@if (@ViewBag.totalRecord > 0)
{
        
        <table class="table table-striped">
            <tr>
                <th>
                    STT
                </th>
                <th>
                    Tài khoản
                </th>
                <th>
                    Họ
                </th>
                <th>
                    Tên
                </th>
                <th>
                    Email
                </th>
                <th>
                    Số điện thoại
                </th>
                <th>
                    Chức vụ
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @(ViewBag.Count++)
                    </td>
                    <td>
                        @Html.ActionLink(item.Username, "Details", new { id = item.Id, username = item.Username })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleName)
                    </td>
                </tr>
            }

        </table>
        <br />
        <p>Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) trong tổng số @Model.PageCount trang</p>
    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, searchString = ViewBag.SearchStr, roleString = ViewBag.RoleStr, genderString = ViewBag.GenderStr }))   
}
