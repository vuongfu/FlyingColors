@model TutorOnline.Web.Models.AnswerViewModels

@{
    ViewBag.Title = "Chi tiết câu trả lời";
    Layout = "~/Views/Shared/_Layout_BackendUser.cshtml";
}

<div class="container-fluid">
    <h3>Chi tiết câu trả lời</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>Nội dung câu hỏi:</dt>
        <dd>@Html.DisplayFor(modelItem => modelItem.QuesContent)</dd>
        <dt>Hình ảnh câu hỏi:</dt>
        @if (String.IsNullOrEmpty(Model.QuesPhoto))
        {
            <dd>
                @("N/A")
            </dd>
        }
        else
        {
            <dd>
                <img src="~/Content/Uploads/Images/Thumbnails/@Model.QuesPhoto.Substring(3)" />
            </dd>
        }
        <dt>Nội dung câu trả lời:</dt>
        <dd>@Html.DisplayFor(modelItem => modelItem.Content)</dd>
        <dt>Đáp án:</dt>
        <dd>@Html.DisplayFor(modelItem => modelItem.isCorrectStr)</dd>
    </dl>
    <br />
    <div class="row">
        <div class="col-md-8">
            @Html.ActionLink("Chỉnh sửa", "Edit", new { @id = Model.AnswerId }, new { @class = "btn btn-success" })
            @Html.ActionLink("Xóa", "Delete", new { @id = Model.AnswerId }, new { @class = "btn btn-danger" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-8">
            @Html.ActionLink("Trở lại", "Details", "Question", new { id = ViewBag.queId, subId = ViewBag.subId }, new { @class = "btn btn-default" })
        </div>
    </div>
</div>