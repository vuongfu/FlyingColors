@model List<List<TutorOnline.Web.Models.SubjectsViewModels>>
<link href="~/content/pagedlist.css" rel="stylesheet" type="text/css" />
<link href="~/Content/entry-main.css" rel="stylesheet" />
<link href="~/Content/discover.css" rel="stylesheet" />
@{
    ViewBag.title = "view Student Subject";
    Layout = "~/Views/Shared/_Layout_Parent.cshtml";
}
<style>
    body {
        background: none;
    }
    .center{
    font-weight: bold;
    text-align: center !important;
    }
    hr {
        display: block;
        height: 1px;
        border: 0;
        border-top: 1px solid #ccc;
        margin: 1em 0;
        padding: 0;
    }
</style>
<body>
    <h3 class="center">KHÓA HỌC CỦA HỌC SINH</h3>
    <hr />
    <div id="khoahoc" class="container">

        @if (Model.Count != 0)
        {
            for (int i = 0; i < Model.Count; i++)
            {
                <div class="col-lg-11">
                    @if (Model[i].Count != 0)
                    {
                        <div class="row">
                            <h3 class="text-center text-muted">@Model[i][0].CategoryName</h3>
                        </div>
                        <br />
                        for (int j = 0; j < Model[i].Count; j++)
                        {
                            <div class="slider col-md-3" style="margin-right: 0px;">
                                <div class="merchand-course-card card-listview">
                                    <a href="#" class="cardmask">
                                        <span class="cardoption">
                                            @if (Model[i][j].Photo != null)
                                            {
                                                <img src="~/Content/Uploads/Images/@Model[i][j].Photo" alt="@Model[i][j].SubjectName" class="cardimage" height="180" width="240">
                                            }
                                            else
                                            {
                                                <img src="~/image/Course.jpg" alt="@Model[i][j].SubjectName" class="cardimage" height="180" width="240">
                                            }
                                            
                                        </span>
                                        <span class="carddetail">
                                            <span class="cardname">@Model[i][j].SubjectName</span>
                                            <div class="cardinstit">
                                                <p class="dib" data-purpose="cardinstit"> @Model[i][j].Purpose </p>
                                            </div>
                                        </span>
                                    </a>
                                </div>
                            </div>
                        }
                    }
                </div>
            }
        }
        else
        {
            <h2 class="center"> Học sinh chưa đăng ký khóa học nào.</h2>
            <br />
        }
    </div>
</body>
