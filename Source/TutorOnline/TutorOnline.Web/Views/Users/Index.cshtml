@model IEnumerable<Tutor.DataAccess.User>

@{
    ViewBag.Title = "Index";
}

<h2>Users Management</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm("Index", "Users", FormMethod.Get))
    {
    <p>
        Username: @Html.TextBox("SearchString") 
        Role: @Html.DropDownList("roleString", "All")
        Gender: @Html.DropDownList("genderString", "All")
        <br /><input type="submit" value="Search" />
    </p>
    }
    
</p>


    <table class="table">
        <tr> 
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>      
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>                      
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SkypeID)
            </th>                    
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wallet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role.RoleName)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.Username, "Details", new { id = item.Id })       
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>              
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SkypeID)
            </td>             
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>       
            <td>
                @Html.DisplayFor(modelItem => item.Wallet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.RoleName)
            </td>
        </tr>
    }

    </table>
