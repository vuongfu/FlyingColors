@model TutorOnline.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>
<div class="container">
    <div class="login-container">
        <div id="output"></div>
        <div class="avatar"></div>
        <div class="form-box">

            @using (Html.BeginForm("Login", "Account", null, FormMethod.Post, new {  }))
            {
                @*@Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                @Html.TextBoxFor(m => m.Username, new { @placeholder = "username" })
                @*@Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })*@

                @Html.PasswordFor(m => m.Password, new{ @placeholder = "password" })
                @*@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })*@

                

                <button class="btn btn-info btn-block login" type="submit">Login</button>                            
            }
            <form action="@Url.Action("LoginWithGooglePlus", "LoginSocial")" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger"><i class="fa fa-google-plus"></i>  Login with Google + </button>

            </form>
            <p>
                @Html.ActionLink("Đăng ký", "Register")
            </p>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}