@model TutorOnline.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Đăng nhập";
}

<div class="row" style="background: #289399;">
    <div class="login-container" style="background: #f6ebeb;">
        <div id="output"></div>
        <div class="avatar" style="background-image: url(../../Image/TutorOnline_Icon.png)"></div>
        <div class="form-box">

            @using (Html.BeginForm("Login", "Account", null, FormMethod.Post, new {  }))
            {
                @*@Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                @Html.TextBoxFor(m => m.Username, new { @placeholder = "username" })
                @*@Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })*@

                @Html.PasswordFor(m => m.Password, new{ @placeholder = "password" })
                @*@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })*@

                

                <button class="btn btn-info btn-block login" type="submit">Login</button>                            
            }
            
            <form action="@Url.Action("LoginWithGooglePlus", "LoginSocial")" method="post">
                @Html.AntiForgeryToken()
                <button class="btn btn-danger btn-block login" type="submit"><i class="fa fa-google-plus"></i> Login with Google +</button>
            </form>
            <br/>
            <a href="#">Quên mật khẩu?</a>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}