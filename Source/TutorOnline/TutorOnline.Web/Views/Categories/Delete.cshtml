@model TutorOnline.Web.Models.CategoriesViewModels

@{
    ViewBag.Title = "Xóa môn học";
    Layout = "~/Views/Shared/_Layout_BackendUser.cshtml";
}

<div>
    <h3>Xóa môn học</h3>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <h4><strong>Tên môn học: </strong>@Html.DisplayFor(modelItem => modelItem.CategoryName)</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <h4><strong>Mô tả: </strong>@Html.DisplayFor(modelItem => modelItem.Description)</h4>
        </div>
    </div>
    <br />
    <div class="alert alert-danger">
        <strong>Cảnh báo! </strong>Bạn có chắc chắn muốn xóa môn học này?
    </div>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Xóa môn học" class="btn btn-danger" />
            @Html.ActionLink("Trở lại", "Details", new { @id = Model.CategoryId }, new { @class = "btn btn-default" })
        </div>
    }
</div>
