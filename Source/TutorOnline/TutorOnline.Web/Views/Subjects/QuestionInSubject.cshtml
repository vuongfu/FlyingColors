@model IEnumerable<TutorOnline.Web.Models.QuestionViewModels>

@{
    Layout = null;
    ViewBag.count = 0;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bài tập của khóa học</title>
</head>
<body>
    <div class="container-fluid">
    @if (@ViewBag.totalRecord > 0)
    {
        foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-12">
                    <h4>@(ViewBag.Count++ + 1). Link tham khảo bài tập: </h4><a href="@Html.DisplayFor(modelItem => item.Content)">@Html.DisplayFor(modelItem => item.Content)</a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <h4>Khóa học hiện chưa có bài tập tham khảo. Hãy thêm bài tập tham khảo cho khóa học.</h4>
            </div>
        </div>
    }
    </div>
</body>
</html>
