@model TutorOnline.Web.Models.SubjectsViewModels

@{
    ViewBag.Title = "Thêm khóa học";
    Layout = "~/Views/Shared/_Layout_BackendUser.cshtml";
}

@using (Html.BeginForm("Create", "Subjects", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h3>Thêm khóa học</h3>
        <hr />

        <div class="form-group">
            <p class="control-label col-md-2">Tên khóa học: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SubjectName, new { htmlAttributes = new { @class = "form-control", style = "width:200px;" } })
                @Html.ValidationMessageFor(model => model.SubjectName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Thuộc môn học: </p>
            <div class="col-md-10">
                @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control", style = "width:120px;" })
                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Hình ảnh: </p>
            <div class="col-md-10">
                <input type="file" name="file" />
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Mục tiêu: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Purpose, new { htmlAttributes = new { @class = "form-control", style = "width:300px; height: 50px;" } })
                @Html.ValidationMessageFor(model => model.Purpose, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Yêu cầu: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Requirement, new { htmlAttributes = new { @class = "form-control", style = "width:300px; height: 50px;" } })
                @Html.ValidationMessageFor(model => model.Requirement, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Mô tả: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", style = "width:300px; height: 50px;" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm khóa học" class="btn btn-success" />
                @Html.ActionLink("Trở lại", "Index", "Subjects", new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}
