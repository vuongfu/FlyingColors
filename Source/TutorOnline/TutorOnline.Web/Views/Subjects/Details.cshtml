@model TutorOnline.Web.Models.SubjectsViewModels

@{
    ViewBag.Title = "Chi tiết khóa học";
    Layout = "~/Views/Shared/_Layout_BackendUser.cshtml";
}

<div class="container-fluid">
    <h3>Chi tiết khóa học</h3>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <h4><strong>Tên khóa học: </strong>@Html.DisplayFor(modelItem => modelItem.SubjectName)</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <h4><strong>Loại môn học: </strong>@Html.DisplayFor(modelItem => modelItem.CategoryName)</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <h4><strong>Mục tiêu: </strong>@Html.DisplayFor(modelItem => modelItem.Purpose)</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <h4><strong>Yêu cầu: </strong>@Html.DisplayFor(modelItem => modelItem.Requirement)</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <h4><strong>Hình ảnh: </strong>@Html.DisplayFor(modelItem => modelItem.Photo)</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <h4><strong>Mô tả: </strong>@Html.DisplayFor(modelItem => modelItem.Description)</h4>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-8">
            @Html.ActionLink("Chỉnh sửa", "Edit", new { @id = Model.SubjectId }, new { @class = "btn btn-success" })
            @Html.ActionLink("Xóa", "Delete", new { @id = Model.SubjectId }, new { @class = "btn btn-danger" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-8">
            @Html.ActionLink("Trở lại", "Index", new { @id = Model.SubjectId }, new { @class = "btn btn-default" })
        </div>
    </div>
</div>
