@model TutorOnline.Web.Models.SubjectsViewModels

@{
    ViewBag.Title = "Xóa khóa học";
    Layout = "~/Views/Shared/_Layout_BackendUser.cshtml";
}

<div>
    <h3>Xóa khóa học</h3>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <h4><strong>Tên khóa học: </strong>@Html.DisplayFor(modelItem => modelItem.SubjectName)</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <h4><strong>Loại môn học: </strong>@Html.DisplayFor(modelItem => modelItem.CategoryName)</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <h4><strong>Mục tiêu: </strong>@Html.DisplayFor(modelItem => modelItem.Purpose)</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <h4><strong>Yêu cầu: </strong>@Html.DisplayFor(modelItem => modelItem.Requirement)</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <h4><strong>Hình ảnh: </strong>@Html.DisplayFor(modelItem => modelItem.Photo)</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <h4><strong>Mô tả: </strong>@Html.DisplayFor(modelItem => modelItem.Description)</h4>
        </div>
    </div>
    <br />
    <div class="alert alert-danger">
        <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa khóa học này?
    </div>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Xóa khóa học" class="btn btn-danger" />
            @Html.ActionLink("Trở lại", "Details", new { @id = Model.SubjectId }, new { @class = "btn btn-default" })
        </div>
    }
</div>
