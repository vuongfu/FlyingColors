@model TutorOnline.Web.Models.CriteriaViewModel

@{
    ViewBag.Title = "Thêm tiêu chí đánh giá học viên cho bài học";
    Layout = "~/Views/Shared/_Layout_BackendUser.cshtml";
}
@{TempData["lesId"] = ViewBag.lesId;}
@{TempData["lesName"] = ViewBag.lesName;}

@using (Html.BeginForm("Create", "Criteria", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <h3>Thêm tiêu chí đánh giá</h3>
        <hr />

        <div class="form-group">
            <p class="control-label col-md-3">Thuộc bài học: </p>
            <div class="col-md-9" style="margin-top: 7px;">
                @Html.Raw(ViewBag.lesName)
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-3">Nôi dung tiêu chí: </p>
            <div class="col-md-9">
                @Html.EditorFor(model => model.CriteriaName, new { htmlAttributes = new { @class = "form-control", style = "width:200px;" } })
                @Html.ValidationMessageFor(model => model.CriteriaName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm tiêu chí đánh giá" class="btn btn-success" />
                @Html.ActionLink("Quay lại", "Details", "Lessons", new { id = ViewBag.lesId }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}