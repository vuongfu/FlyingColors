@model TutorOnline.Web.Models.CriteriaViewModel

@{
    ViewBag.Title = "Chỉnh sửa nội dung tiêu chí đánh giá";
    Layout = "~/Views/Shared/_Layout_BackendUser.cshtml";
}

@using (Html.BeginForm("Edit", "Criteria", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CriteriaId)
        @Html.HiddenFor(model => model.LessonId)
        @Html.HiddenFor(model => model.RoleId)
        @Html.HiddenFor(model => model.LessonName)

        <h3>Chỉnh sửa nội dung tiêu chí đánh giá</h3>
        <hr />

        <div class="form-group">
            <p class="control-label col-md-3">Thuộc bài học: </p>
            <div class="col-md-9" style="margin-top: 7px;">
                @Html.DisplayFor(model => model.LessonName)
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-3">Nội dung tiêu chí: </p>
            <div class="col-md-9">
                @Html.EditorFor(model => model.CriteriaName, new { htmlAttributes = new { @class = "form-control", style = "width:200px;" } })
                @Html.ValidationMessageFor(model => model.CriteriaName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập nhật" class="btn btn-success" />
                @Html.ActionLink("Quay lại", "Details", "Criteria", new { id = Model.CriteriaId }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}
