@model PagedList.IPagedList<TutorOnline.Web.Models.ApprovePretutorViewModel>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Quản lý Pretutor";
    Layout = "~/Views/Shared/_Layout_BackendUser.cshtml";
    ViewBag.Count = 0;
}

<div class="container-fluid">
    <h3>Quản lý danh sách đăng ký tutor</h3>
    <hr />
    <div class="row">
        @using (Html.BeginForm("Index", "Manager", FormMethod.Get))
        {
            <div class="col-md-3">
                @Html.DropDownList("genderString", null, "--Tất cả--", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-9">
                <div class="input-group">
                    @Html.TextBox("searchString", null, htmlAttributes: new { @class = "form-control", @placeholder = "Tìm kiếm..." })
                    <span class="input-group-btn">
                        <input type="submit" value="Tìm Kiếm" class="btn btn-default" />
                    </span>
                </div>
            </div>
        }
    </div>
    </br>
    @if (@ViewBag.totalRecord > 0)
    {
        <div class="row">
            <div class="col-md-12">
                <h4>Có @ViewBag.totalRecord kết quả tìm kiếm</h4>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Stt</th>
                        <th>Họ và tên</th>
                        <th>Ngày sinh</th>
                        <th>Giới tính</th>
                        <th>Skype</th>
                        <th>CV</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@(ViewBag.Count++ + 1)</td>
                            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                            <td>@Html.DisplayFor(modelItem => item.BirthDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.GenderStr)</td>
                            <td>@Html.DisplayFor(modelItem => item.SkypeID)</td>
                            <td>@Html.DisplayFor(modelItem => item.Cv)</td>
                            <td>
                                @Html.ActionLink("Chấp Nhận", "ApprovedPretutor", "Manager", new { @class = "btn btn-success" })
                                @Html.ActionLink("Từ chối", "RejectPretutor", "Manager", new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            @Html.PagedListPager(Model, page => Url.Action("Index",
                                 new { page, searchString = ViewBag.searchStr, genderString = ViewBag.genderStr }))
        </div>
    </div>
</div>
