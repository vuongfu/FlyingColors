@model TutorOnline.Web.Models.PersonalViewModel

@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout_BackendUser.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h3>Đổi mật khẩu</h3>
    <hr />
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.RoleID)
        @Html.HiddenFor(model => model.LastName)
        @Html.HiddenFor(model => model.FirstName)
        @Html.HiddenFor(model => model.FullName)
        @Html.HiddenFor(model => model.Username)
        @Html.HiddenFor(model => model.BirthDate)
        @Html.HiddenFor(model => model.Gender)
        @Html.HiddenFor(model => model.Address)
        @Html.HiddenFor(model => model.Email)
        @Html.HiddenFor(model => model.SkypeID)
        @Html.HiddenFor(model => model.City)
        @Html.HiddenFor(model => model.PostalCode)
        @Html.HiddenFor(model => model.Country)
        @Html.HiddenFor(model => model.Photo)
        @Html.HiddenFor(model => model.PhoneNumber)
        @Html.HiddenFor(model => model.Description)
        @Html.HiddenFor(model => model.Password)

        <div class="form-group">
            <p class="control-label col-md-2">Mật khẩu cũ: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Mật khẩu mới: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Xác nhận mật khẩu mới: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thay Đổi" class="btn btn-success" />
                @Html.ActionLink("Trở lại", "Index", new { @id = Model.Id }, new { @class = "btn btn-default" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Quên mật khẩu?", "ForgotPassword", new { @id = Model.Id })
            </div>
        </div>
    </div>
}
