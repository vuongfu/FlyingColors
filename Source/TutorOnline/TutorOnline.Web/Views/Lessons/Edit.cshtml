@model TutorOnline.Web.Models.LessonViewModels

@{
    ViewBag.Title = "Chỉnh sửa bài học";
    Layout = "~/Views/Shared/_Layout_BackendUser.cshtml";
}

@using (Html.BeginForm("Edit", "Lessons", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <h3>Chỉnh sửa bài học</h3>
    <hr />
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.LessonId)
        @Html.HiddenFor(model => model.SubjectName)
        @Html.HiddenFor(model => model.Order)

        <div class="form-group">
            <p class="control-label col-md-2">Thuộc khóa học: </p>
            <div class="col-md-10">
                @Html.DropDownList("SubjectId", null, htmlAttributes: new { @class = "form-control", style = "width:200px;", @disabled = "disabled" })
                @Html.DropDownList("SubjectId", null, htmlAttributes: new { @class = "form-control", style = "width:200px; display: none;" })
                @Html.ValidationMessageFor(model => model.SubjectId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Thứ tự bài học: </p>
            <div class="col-md-10" style="margin-top: 9px;">
                @Html.DisplayFor(model => model.Order)
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Tên bài học: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.LessonName, new { htmlAttributes = new { @class = "form-control", style = "width:200px;" } })
                @Html.ValidationMessageFor(model => model.LessonName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Nội dung: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", style = "width:300px; height: 50px;" } })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập Nhật" class="btn btn-success" />
                @Html.ActionLink("Trở lại", "Details", "Lessons", new { @id = Model.LessonId }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}
