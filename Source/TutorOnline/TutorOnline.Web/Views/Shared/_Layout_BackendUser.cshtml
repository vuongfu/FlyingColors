<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title TutorOnline</title>
    <link rel="shortcut icon" href="~/Image/TutorOnline_Icon.png" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Tutor Online", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>                       
                        <a href="@Url.Action("Logout", "Account")">
                            Welcome @HttpContext.Current.User.Identity.Name ! Log Out <span class="glyphicon glyphicon-log-in"> </span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success alert-dismissable">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                @TempData["message"]
            </div>
        }

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12"><h2>Gia Sư Trực Tuyến</h2></div>
            </div>
            @{ 
                string Rid = "";
                string Rname = "";
                if (Request.Cookies["Role"] != null)
                {
                    if (Request.Cookies["Role"]["RoleId"] != null)
                    {
                        Rid = Request.Cookies["Role"]["RoleId"];
                    }
                    if (Request.Cookies["Role"]["RoleId"] != null)
                    {
                        Rname = Request.Cookies["Role"]["RoleName"];
                    }

                }
            }
            <div class="row">
                <div class="col-md-3">
                    <ul class="nav nav-pills nav-stacked">
                        <li class=""><a href="@Url.Action("Details", "Users", new { id = Rid.ToString(), info = true })">Thông tin cá nhân</a></li>
                        <li><a href="@Url.Action("ChangePwd", "Manager", new { id =  Rid.ToString() })">Đổi mật khẩu</a></li>
                        <li class="@(Rname.ToString() == "System Admin"? "":"hidden") "><a href="@Url.Action("Index", "Users")">Quản lý người dùng</a></li>
                        <li class="@(Rname.ToString() == "Manager"? "":"hidden")"><a href="@Url.Action("ManageCategories", "Manager")">Quản lý môn học</a></li>
                        <li class="@(Rname.ToString() == "Manager"? "":"hidden")"><a href="@Url.Action("ManageSubjects", "Manager")">Quản lý khóa học</a></li>
                        <li class="@(Rname.ToString() == "Manager"? "":"hidden")"><a href="@Url.Action("ListPreTutor", "Manager")">Danh sách gia sư ứng tuyển</a></li>
                        <li class="@(Rname.ToString() == "Accountant"? "":"hidden")"><a href="@Url.Action("Index", "Accountant")">Quản lý tài chính</a></li>
                    </ul>
                </div>
                <div class="col-md-9">
                    @RenderBody()
                </div>
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tutor Online</p>
        </footer>
    </div>

    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)   
    
    <script type="text/javascript">
        $(document).ready(function () {
            $('li.active').removeClass('active');
            $('a[href="' + location.pathname + '"]').closest('li').addClass('active');
        });
    </script>

</body>
</html>
