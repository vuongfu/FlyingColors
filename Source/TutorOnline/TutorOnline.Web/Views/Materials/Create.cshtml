@model TutorOnline.Web.Models.MaterialViewModels

@{
    ViewBag.Title = "Thêm tài liệu học tập";
    Layout = "~/Views/Shared/_Layout_BackendUser.cshtml";
}

@using (Html.BeginForm("Create", "Materials", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h3>Thêm tài liệu học tập</h3>
        <hr />

        <div class="form-group">
            <p class="control-label col-md-2">Tên tài liệu: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaterialUrl, new { htmlAttributes = new { @class = "form-control", style = "width:200px;" } })
                @Html.ValidationMessageFor(model => model.MaterialUrl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Thuộc khóa học: </p>
            <div class="col-md-10">
                @Html.DropDownList("SubjectId", null, htmlAttributes: new { @class = "form-control", style = "width:200px;" })
                @Html.ValidationMessageFor(model => model.SubjectId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Thuộc bài học: </p>
            <div class="col-md-10">
                @Html.DropDownList("LessonId", null, htmlAttributes: new { @class = "form-control", style = "width:200px;" })
                @Html.ValidationMessageFor(model => model.LessonId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Loại tài liệu: </p>
            <div class="col-md-10">
                @Html.DropDownList("MaterialTypeId", null, htmlAttributes: new { @class = "form-control", style = "width:100px;" })
                @Html.ValidationMessageFor(model => model.MaterialTypeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm tài liệu" class="btn btn-success" />
                @Html.ActionLink("Trở lại", "Index", "Materials", new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}