@model TutorOnline.Web.Models.MaterialViewModels

@{
    ViewBag.Title = "Thêm tài liệu học tập";
    Layout = "~/Views/Shared/_Layout_BackendUser.cshtml";
}

@using (Html.BeginForm("Create", "Materials", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h3>Thêm tài liệu học tập</h3>
        <hr />

        @if (ViewBag.subId != null)
        {
            <div class="form-group">
                <p class="control-label col-md-2">Thuộc khóa học: </p>
                <div class="col-md-10">
                    @Html.DropDownList("SubjectId", null, htmlAttributes: new { @class = "form-control", style = "width:200px;", @disabled = "disabled" })
                    @Html.DropDownList("SubjectId", null, htmlAttributes: new { @class = "form-control", style = "width:200px; display: none;" })
                    @Html.ValidationMessageFor(model => model.SubjectId, "", new { @class = "text-danger" })
                </div>
            </div>
        }
        @if (ViewBag.lesId != null)
        {
            <div class="form-group">
                <p class="control-label col-md-2">Thuộc bài học: </p>
                <div class="col-md-10">
                    @Html.DropDownList("LessonId", null, htmlAttributes: new { @class = "form-control", style = "width:200px;", @disabled = "disabled" })
                    @Html.DropDownList("LessonId", null, htmlAttributes: new { @class = "form-control", style = "width:200px; display: none;" })
                    @Html.ValidationMessageFor(model => model.LessonId, "", new { @class = "text-danger" })
                </div>
            </div>
        }

        <div class="form-group">
            <p class="control-label col-md-2">File tài liệu: </p>
            <div class="col-md-10">
                <input type="file" name="file" />
                @Html.ValidationMessageFor(model => model.MaterialUrl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Mô tả: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", style = "width:300px; height: 50px;" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm tài liệu" class="btn btn-success" />
                @if (ViewBag.subId != null && ViewBag.lesId == null)
                {
                    @Html.ActionLink("Trở lại", "Details", "Subjects", new { @id = ViewBag.subId }, new { @class = "btn btn-default" })
                }
                else
                {
                    @Html.ActionLink("Trở lại", "Details", "Lessons", new { @id = ViewBag.lesId }, new { @class = "btn btn-default" })
                }
            </div>
        </div>
    </div>
}