@model PagedList.IPagedList<TutorOnline.Web.Models.MaterialViewModels>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Quản lý tài liệu học tập";
    Layout = "~/Views/Shared/_Layout_BackendUser.cshtml";
    ViewBag.Count = 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h3 style="margin-bottom: -40px;">Quản lý tài liệu học tập</h3>
            @Html.ActionLink("Trở lại", "Index", "LearningResources", null, new { @class = "btn btn-info pull-right" })
        </div>
    </div>
    <hr />
    <div class="row">
        @using (Html.BeginForm("Index", "Materials", FormMethod.Get))
        {
            <div class="col-md-3">
                @Html.DropDownList("subString", null, "--Thuộc khóa học--", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-3">
                @Html.DropDownList("lesString", null, "--Thuộc bài học--", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                <div class="input-group">
                    @Html.TextBox("searchString", null, htmlAttributes: new { @class = "form-control", @placeholder = "Tìm kiếm tên tài liệu..." })
                    <span class="input-group-btn">
                        <input type="submit" value="Tìm Kiếm" class="btn btn-default" name="btnSearch" />
                    </span>
                </div>
            </div>
        }
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            @Html.ActionLink("Thêm Tài Liệu", "Create", "Materials", new { @class = "btn btn-success" })
        </div>
    </div>
    <br />
    @if (@ViewBag.totalRecord > 0)
    {
        <div class="row">
            <div class="col-md-12">
                <h4>Tìm thấy @ViewBag.totalRecord kết quả.</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped">
                    <tr>
                        <th>STT</th>
                        <th>Tên tài liệu</th>
                        <th>Thuộc khóa học</th>
                        <th>Thuộc bài học</th>
                        <th>Loại tài liệu</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(ViewBag.Count++ + 1)</td>
                            <td>@Html.ActionLink(item.MaterialUrl, "Details", new { id = item.MaterialId })</td>
                            <td>@Html.DisplayFor(modelItem => item.SubjectName)</td>
                            <td>@Html.DisplayFor(modelItem => item.LessonName)</td>
                            <td>@Html.DisplayFor(modelItem => item.MaterialTypeName)</td>
                        </tr>
                    }
                </table>
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("Index",
                                 new { page, searchString = ViewBag.searchString, subString = ViewBag.subStr , lesString = ViewBag.lesStr, btnSearch = ViewBag.btnSearch }))
            </div>
        </div>
    }
    else if (@ViewBag.btnSearch != null && ViewBag.totalRecord == 0)
    {
        <div class="row">
            <div class="col-md-12">
                <h4>Tìm thấy @ViewBag.totalRecord kết quả</h4>
            </div>
        </div>
    }
</div>
