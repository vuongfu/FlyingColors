@model List<List<TutorOnline.Web.Models.SubjectsViewModels>>
<link href="~/content/pagedlist.css" rel="stylesheet" type="text/css" />
<link href="~/Scripts/discover.css" rel="stylesheet" />
<link href="~/Scripts/entry-main.css" rel="stylesheet" />
@{
    ViewBag.title = "viewcategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background: none;
    }
    .txtlink {
    color: lawngreen;
    text-decoration: none;
    margin-left: 20px;
    font-size: 16px;
    }
</style>
<body>
    <div id="khoahoc" class="container">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="row">
                @if (Model[i].Count != 0)
                {
                    <div class="row">
                        <h3 class="text-center text-muted">@Model[i][0].CategoryName</h3>

                    </div>
                    <br />
                    int count;
                    if(Model[i].Count < 5)
                    {
                        count = Model[i].Count; ;
                    } else { count = 5; }
                    for (int j = 0; j < count; j++)
                    {
                        <div class="slider-list--item--3nEQO col-md-3" style="margin-right: 0px;">
                            <div class="merchandising-course-card--card--Ef5aV merchandising-course-card--card__list-view--13LYX">
                                <a href="SubjectDetail?SubjectId=@Model[i][j].SubjectId" class="merchandising-course-card--mask--2NGzX">
                                    <span class="merchandising-course-card--card__options--2slCk">
                                        <img src="~/image/Course.jpg" alt="@Model[i][j].SubjectName" class="merchandising-course-card--card__image--2oGQE" height="240" width="240">
                                    </span>
                                    <span class="merchandising-course-card--card__details--1G7gB">
                                        <span class="merchandising-course-card--details__name--3h_2f">@Model[i][j].SubjectName</span>
                                        <div class="merchandising-course-card--card__instructor-titles--IJ4_5">
                                            <p class="dib" data-purpose="course-card-instructor-titles"> @Model[i][j].Purpose </p>
                                        </div>
                                    </span>
                                </a>
                            </div>
                        </div>
                    }
                    <div class="row" style="text-align: right">
                        <a href="@Url.Action("ViewCategory","Student",new {CategoryId = Model[i][0].CategoryId })" class="txtlink">Xem tất cả</a>
                    </div>
                }

            </div>
        }
    </div>
</body>

<script src="~/Scripts/analytics.js"></script>
<script src="~/Scripts/channel-dashboard.js"></script>