@model TutorOnline.Web.Models.QuestionViewModels

@{
    ViewBag.Title = "Chỉnh sửa câu hỏi trắc nghiệm";
    Layout = "~/Views/Shared/_Layout_BackendUser.cshtml";
}
@{TempData["subId"] = ViewBag.subId;}

@using (Html.BeginForm("Edit", "Question", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.QuestionId)
        @Html.HiddenFor(model => model.Photo)
        <h3>Chỉnh sửa câu hỏi trắc nghiệm cho bài học</h3>
        <hr />
        <div class="form-group">
            <p class="control-label col-md-2">Thuộc bài học: </p>
            <div class="col-md-10">
                @Html.DropDownList("LessonId", null, htmlAttributes: new { @class = "form-control", style = "width:120px;", @disabled = "disabled" })
                @Html.DropDownList("LessonId", null, htmlAttributes: new { @class = "form-control", style = "width:120px; display: none;" })
                @Html.ValidationMessageFor(model => model.LessonId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Hình ảnh: </p>
            <div class="col-md-10">
                @if (String.IsNullOrEmpty(Model.Photo))
                {
                    <p style="margin-top: 7px;">@("N/A")</p>
                }
                else
                {
                    <img src="~/Content/Uploads/Images/Thumbnails/@Model.Photo.Substring(3)" />
                }
                <input type="file" name="file" />
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Nội dung: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", style = "width:200px;" } })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập nhật" class="btn btn-success" />
                @Html.ActionLink("Quay lại", "Details", new { id = Model.QuestionId, subId = ViewBag.subId }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}
