@model TutorOnline.Web.Models.QuestionViewModels

@{
    ViewBag.Title = "Thêm câu hỏi trắc nghiệm";
    Layout = "~/Views/Shared/_Layout_BackendUser.cshtml";
}

@using (Html.BeginForm("Create", "Question", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h3>Thêm câu hỏi trắc nghiệm cho bài học</h3>
        <hr />
        <div class="form-group">
            <p class="control-label col-md-2">Thuộc bài học: </p>
            <div class="col-md-10">
                @Html.DropDownList("LessonId", null, htmlAttributes: new { @class = "form-control", style = "width:200px;", @disabled = "disabled" })
                @Html.DropDownList("LessonId", null, htmlAttributes: new { @class = "form-control", style = "width:200px; display: none;" })
                @Html.ValidationMessageFor(model => model.LessonId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Hình ảnh: </p>
            <div class="col-md-10">
                <input type="file" name="file" />
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Nội dung: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", style = "width:200px;" } })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm câu hỏi" class="btn btn-success" />
                @Html.ActionLink("Trở lại", "Details", "Lessons", new { @id = ViewBag.lesId},new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

