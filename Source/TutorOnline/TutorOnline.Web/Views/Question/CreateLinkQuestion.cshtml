@model TutorOnline.Web.Models.QuestionLinkViewModels

@{
    ViewBag.Title = "Thêm bài tập tham khảo";
    Layout = "~/Views/Shared/_Layout_BackendUser.cshtml";
}
@{TempData["subId"] = ViewBag.subId;}
@{TempData["subName"] = ViewBag.subName;}

@using (Html.BeginForm("CreateLinkQuestion", "Question", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h3>Thêm bài tập tham khảo cho khóa học</h3>
        <hr />
        <div class="form-group">
            <p class="control-label col-md-3">Thuộc khóa học: </p>
            <div class="col-md-9" style="margin-top: 8px;">
                @Html.Raw(ViewBag.subName)
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-3">Link bài tập: </p>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Link, new { htmlAttributes = new { @class = "form-control", style = "width:200px;" } })
                @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm bài tập tham khảo" class="btn btn-success" />
                @Html.ActionLink("Quay lại", "Details", "Subjects", new { @id = ViewBag.subId }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

